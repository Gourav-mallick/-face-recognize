<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- HEADER -->
            <TextView
                android:id="@+id/tvEnrollHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingVertical="14dp" />

            <!-- LIST DROPDOWN -->
            <ListView
                android:id="@+id/listUsers"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:visibility="gone"
                android:background="@drawable/white_transparent_card"
                android:padding="6dp"
                android:divider="#30FFFFFF"
                android:dividerHeight="1dp"
                android:elevation="8dp"
                android:layout_marginBottom="16dp" />

            <!-- MAIN CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_transparent_card"
                android:padding="16dp"
                android:elevation="6dp">

                <!-- USER TYPE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Type"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioUserType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/rbStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student"
                        android:textColor="#E0E0E0"
                        android:buttonTint="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/rbTeacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher"
                        android:textColor="#E0E0E0"
                        android:buttonTint="#80FFFFFF"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rbStaff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Staff"
                        android:textColor="#E0E0E0"
                        android:buttonTint="#FFFFFF" />
                </RadioGroup>

                <!-- ACTION TYPE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action Type"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <RadioGroup
                    android:id="@+id/radioActionType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/rbAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add New"
                        android:textColor="#E0E0E0"
                        android:buttonTint="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/rbUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:textColor="#E0E0E0"
                        android:buttonTint="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/rbDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="#E0E0E0"
                        android:buttonTint="#FFFFFF" />
                </RadioGroup>

                <!-- SEARCH BOX -->
                <EditText
                    android:id="@+id/editSearchId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="14dp"
                    android:hint="Search by name"
                    android:textColor="@color/white"
                    android:textColorHint="#B3FFFFFF"
                    android:background="@drawable/btn_transparent"
                    android:paddingHorizontal="12dp"
                    android:inputType="text" />

                <!-- NAME BOX -->
                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="14dp"
                    android:hint="Display name"
                    android:textColor="@color/white"
                    android:textColorHint="#B3FFFFFF"
                    android:background="@drawable/btn_transparent"
                    android:paddingHorizontal="12dp"
                    android:enabled="false" />

                <!-- ENROLL FACE BUTTON -->
                <Button
                    android:id="@+id/btnEnrollFace"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_rounded"
                    android:text="Register Face"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

            </LinearLayout>


            <!-- FACE CAPTURE INSTRUCTIONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_transparent_card"
                android:padding="16dp"
                android:layout_marginTop="18dp"
                android:elevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instructions Before Capturing"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1) Turn face slightly LEFT"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2) Turn face slightly RIGHT"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3) Keep your face CENTERED"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>


        </LinearLayout>



    </ScrollView>

</FrameLayout>
