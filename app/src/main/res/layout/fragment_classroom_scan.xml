<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient">

    <!-- MAIN CONTENT CONTAINER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:background="@android:color/transparent">

        <!-- HEADER -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingVertical="12dp"
            android:text="Class-Room Attendance"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- LAST SYNC LABEL -->
        <TextView
            android:id="@+id/tvLastSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Last Sync: --"
            android:textColor="#E8EAED"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeader" />

        <!-- TAP TO UPLOAD ATTENDANCE -->
        <LinearLayout
            android:id="@+id/layoutSyncStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_transparent_card"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tvStartClass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvSyncStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tap here to upload attendance"
                android:gravity="center"
                android:textColor="#1DB954"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- RESUME INFO CARD -->
        <LinearLayout
            android:id="@+id/layoutResumeInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:background="@drawable/transparent_blue_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutSyncStatus">

            <TextView
                android:id="@+id/tvResumeClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumed Class: -"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvResumeTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher: -"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvResumeStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present Students: 0"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- PENDING UNSUBMITTED -->
        <TextView
            android:id="@+id/tvUnsubmittedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pending Unsubmitted Classes: 0"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layoutResumeInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- START CLASS BUTTON -->

        <!-- FOOTER (SYNC, ENROLL, VERSION) -->
        <Button
            android:id="@+id/tvStartClass"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_rounded"
            android:text="Start Class"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/layoutDateTimeVersion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/layoutDateTimeVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/tvManualDataSync"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/btn_transparent"
                android:text="ðŸ”„"
                android:textSize="18sp"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/tvEnrollUser"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@drawable/btn_transparent"
                android:paddingHorizontal="12dp"
                android:text="Enroll"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="v1.51"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:background="@drawable/btn_transparent"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
